{
    "routes": [
        {
            "route": "/login",
            "rewrite": "/.auth/login/aad"
        },
        {
            "route": "/about",
            "allowedRoles": [ "authenticated" ]
        },
        {
            "route": "/api/*",
            "allowedRoles": [ "authenticated" ]
        },
        {
            "route": "/.auth/login/*",
            "statusCode": 404
        }
    ],
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "*.{jpg,gif,png}",
            "*.{.css}",
            "*.{.js}"
        ]
    }
}
